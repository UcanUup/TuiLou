<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.init.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.init.StartActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.init.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.init.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.init.RegisterSucceed"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.init.FailHint"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.init.HomeActivity"
            android:screenOrientation="portrait" />
        
        <activity android:name="com.example.tab.MessageActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tab.MessageInfo"
            android:screenOrientation="portrait" />
        
        <activity android:name="com.example.tab.JoinGroup"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tab.InviteSucceed"
            android:screenOrientation="portrait" />
        
        <activity android:name="com.example.tab.CreateGroup"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tab.CreateSucceed"
            android:screenOrientation="portrait" />
        
        <activity android:name="com.example.tab.MyGroup"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tab.SendMessage"
            android:screenOrientation="portrait" />
        
        <activity android:name="com.example.tab.SettingActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
